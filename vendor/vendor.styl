@import "nib"

body
  padding-top 49px
  position    relative

h1
  &.hero
    color         #363636
    font-size     60px
    margin-bottom 22px

section
  padding-top 29px

  h1
    padding-bottom 9px
    margin         20px 0px
    border-bottom  1px solid #eeeeee

.navbar-brand
  font-size 30px

.macgyver-head
  ul
    li
      margin 0px 10px

.keycode-list
  margin-left 0px
  list-style  none

  li
    float         left
    width         25%
    border-bottom 1px solid #F0F0F0
    padding       3px 0px

// Example section css
.docs-example
  position         relative
  margin           15px 0
  padding          39px 19px 14px
  *padding-top     19px
  background-color #fff
  border           1px solid #ddd
  border-radius    4px
  min-height       25px

  &:after
    content          "Example"
    position         absolute
    top              -1px
    left             -1px
    padding          3px 7px
    font-size        12px
    font-weight      bold
    background-color #f5f5f5
    border           1px solid #ddd
    color            #9da0a4
    border-radius    4px 0px 4px 0px

  .mac-menu
    position relative

// Side nav
.docs-sidenav
  margin    30px 0px 0px 0px
  transform rotateX(0) rotateY(0)

  li
    a
      color   #363636
      padding 4px 15px

    &.active
      a, a:hover
        border-color #f9f9f9
        border-left  2px solid #363636

@media (min-width: 992px)
  .docs-sidenav
    &.affix
      top 54px

.footer
  padding          30px 0
  margin-top       70px
  border-top       1px solid #e5e5e5
  background-color #f5f5f5

  p
    margin-bottom 0
    color         #777

  .footer-links
    margin 10px 0

.mac-tag-autocomplete
  width 100%

.date-time
  input
    width 120px

// Taken from Twitter bootstrap prettify
// http://twitter.github.io/bootstrap/assets/js/google-code-prettify/prettify.css
.com
  color #93a1a1
.lit
  color #195f91
.pun, .opn, .clo
  color #93a1a1
.fun
  color #dc322f
.str, .atv
  color #D14
.kwd, .prettyprint .tag
  color #1e347b
.typ, .atn, .dec, .var
  color teal
.pln
  color #48484c

.prettyprint
  padding          8px
  background-color #f7f7f9
  border           1px solid #e1e1e8

.prettyprint.linenums
  box-shadow inset 40px 0 0 #fbfbfc, inset 41px 0 0 #ececf0

/* Specify class=linenums on a pre to get line numbering */
ol.linenums
  margin 0 0 0 33px /* IE indents via margin-left */

ol.linenums li
  padding-left 12px
  color        #bebec5
  line-height  20px
  text-shadow  0 1px 0 #fff
